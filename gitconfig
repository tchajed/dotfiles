# vim: ts=2:sw=2
# Core configuration
[user]
  name = Tej Chajed
  email = tchajed@mit.edu
[github]
  user = tchajed
[init]
  templatedir = ~/.git_template
[commit]
  gpgsign = true

# Better behavior
[core]
  excludesfile = ~/.gitignore_global
  editor = nvim
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
[credential]
  helper = osxkeychain
[push]
  default = simple

# Chrome
[alias]
  wat     = !~/.dotfiles/bin/git-wat
  rank-contributors = !~/.dotfiles/bin/git-rank-contributors
  count   = !git shortlog -sn
  # from https://blog.scottnonnenberg.com/better-git-configuration
  # good for one-line messages
  glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  # today and graph are from
  # https://csswizardry.com/2017/05/little-things-i-like-to-do-with-git/
  today = log --since=03:00:00 --all --no-merges --oneline
  graph = log --graph --all --decorate --stat --date=iso
  dayswork = diff --stat 'HEAD@{today.3am}'
[color]
	ui = true
# color.diff-highlight and color.diff are recommendations from diff-so-fancy
# configured by eval (diff-so-fancy --colors)
#[color "diff-highlight"]
#  oldNormal = red bold
#  oldHighlight = red bold 52
#  newNormal = green bold
#  newHighlight = green bold 22
#[color "diff"]
#  meta = 227
#  frag = magenta bold
#  commit = 227 bold
#  old = red bold
#  new = green bold
#  whitespace = red reverse
[diff-so-fancy]
  first-run = false
[diff]
  # see https://blog.github.com/2018-04-05-git-217-released/
  compactionHeuristic = on
  # see https://blog.github.com/2018-04-05-git-217-released/
	# consider zebra (the default when colorMoved is used), which has distinctive
	# colors but too many
	colorMoved = dimmed_zebra
[rebase]
	autosquash = true
